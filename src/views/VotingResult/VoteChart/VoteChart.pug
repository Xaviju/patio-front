.chart(ref="chartWrapper" :class="{empty: emptyChart}")
  .legend
    .legend-item
      .sample
        .sample-item
      span Results
    .legend-item
      .sample
        .sample-item.average
      span Avg.
  .moods-references
    .mood.mood5
      .deco
      span 5
    .mood.mood4
      .deco
      span 4
    .mood.mood3
      .deco
      span 3
    .mood.mood2
      .deco
      span 2
    .mood.mood1
      .deco
      span 1

  .button-holder
    //- Hide button if there is no more content backward
    button(
      class="left"
      @click="handleGoBackwards"
      v-if="canGoBackwards")
      .arrow
        include ../../../assets/img/chevron.svg
  .chart-container
    Echarts(
      ref="chart"
      :options="chartOptions"
      @click="handleClick"
    )
  .button-holder
    //- Hide button if there is no more content forward
    button.reverse(
      class="right"
      @click="handleGoForwards"
      v-if="canGoForwards")
      .arrow.reverse
        include ../../../assets/img/chevron.svg
  button.link-button.go-to-last(
    :disabled="!canGoForwards"
    @click="handleGotoLast"
  )
    span {{ $t("RESULT.GOTO_LAST") }}
    .image
      include ../../../assets/img/left.svg
