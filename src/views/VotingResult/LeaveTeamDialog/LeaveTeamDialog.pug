.leave-team
  dw-confirm-dialog(
    name="confirm-leave-group"
    v-bind:title="$t('GROUP_DETAIL_ACTIONS.CONFIRM_DIALOG_LEAVE.TITLE')"
    v-bind:message="$t('GROUP_DETAIL_ACTIONS.CONFIRM_DIALOG_LEAVE.MESSAGE')"
    v-bind:acept-button-text="$t('GROUP_DETAIL_ACTIONS.CONFIRM_DIALOG_LEAVE.ACEPT_BUTTON_TEXT')"
    v-bind:reject-button-text="$t('GROUP_DETAIL_ACTIONS.CONFIRM_DIALOG_LEAVE.REJECT_BUTTON_TEXT')"
    v-bind:is-loading="leaveIsLoading"
    v-on:acept="handleLeaveAcept"
    v-on:reject="handleLeaveReject"
  )
