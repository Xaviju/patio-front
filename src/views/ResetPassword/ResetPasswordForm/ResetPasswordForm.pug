form.form(data-testid="form" v-on:submit.prevent="handleSubmit()" autocomplete="off")
  .error(data-testid="error" v-if="error" role="alert")
    | {{ $t(error) }}

  .p.title {{ $t("RESET_PASSWORD_FORM.TITLE") }}
  .p.subtitle {{ $t("RESET_PASSWORD_FORM.SUBTITLE") }}

  .email
    input(data-testid="email" id="email" name="email" type="email" v-bind:placeholder="$t('RESET_PASSWORD_FORM.INPUT_EMAIL.PLACEHOLDER')" required
          v-model="input.email")

  button.submit(data-testid="submit" type="submit" v-bind:disabled="isLoading") {{ $t("RESET_PASSWORD_FORM.BUTTON_SUBMIT") }}

  a.cancel(
    v-on:click="backToLogin()"
    data-testid="back-to-login"
    tabindex="-1"
  ) {{ $t("RESET_PASSWORD_FORM.LINK_CANCEL") }}
