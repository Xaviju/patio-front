.group-detail-actions
  router-link.edit-group(
    data-testid="action-edit"
    tabindex="0"
    v-if="group.isCurrentUserAdmin"
    v-bind:to="{ name: 'groups:edit', params: { id: group.id } }"
  )
    | {{ $t("GROUP_DETAIL_ACTIONS.ACTION_EDIT_GROUP") }}
  button.leave-group(
    data-testid="action-leave"
    tabindex="0"
    v-on:click="handleLeaveButton"
  )
    | {{ $t("GROUP_DETAIL_ACTIONS.ACTION_LEAVE_GROUP") }}
  button.delete-group(
    data-testid="action-delete"
    v-if="group.isCurrentUserAdmin"
    tabindex="-1"
    disabled aria-disabled="true"
  )
    | {{ $t("GROUP_DETAIL_ACTIONS.ACTION_DELETE_GROUP") }}

  dw-confirm-dialog(
    name="confirm-leave-group"
    v-bind:title="$t('GROUP_DETAIL_ACTIONS.CONFIRM_DIALOG_LEAVE.TITLE')"
    v-bind:message="$t('GROUP_DETAIL_ACTIONS.CONFIRM_DIALOG_LEAVE.MESSAGE')"
    v-bind:acept-button-text="$t('GROUP_DETAIL_ACTIONS.CONFIRM_DIALOG_LEAVE.ACEPT_BUTTON_TEXT')"
    v-bind:reject-button-text="$t('GROUP_DETAIL_ACTIONS.CONFIRM_DIALOG_LEAVE.REJECT_BUTTON_TEXT')"
    v-bind:is-loading="leaveIsLoading"
    v-on:acept="handleLeaveAcept"
    v-on:reject="handleLeaveReject"
  )
