.my-profile(v-if="me")
  h1.title-view {{ $t("VIEWS.MY_PROFILE.TITLE") }}
  .profile
    .avatar-holder
      Avatar.avatar(
        data-testid="user-avatar"
        :hash="me.hash"
        :name="me.name"
      )
    .info
      .name(data-testid="user-name") {{ me.name }}
      .email(data-testid="user-email") {{ me.email }}
  // -
    .actions
      a.action.edit(
        disabled aria-disabled="true" tabindex="-1"
      )
        | {{ $t("VIEWS.MY_PROFILE.ACTION_EDIT") }}
      a.action.change-password(
        disabled aria-disabled="true" tabindex="-1"
      )
        | {{ $t("VIEWS.MY_PROFILE.ACTION_CHANGE_PASSWORD") }}
