.voting-detail(v-if="voting")
  .summary
    .average(
      v-bind:class="getVotingClasses(voting)"
    ) {{ voting.average }}
    .stats
      .total Number of votes: {{ stats.count }}
      .votes
        .vote.v1
          | 1
          .circle {{ stats[1] }}
        .vote.v2
          | 2
          .circle {{ stats[2] }}
        .vote.v3
          | 3
          .circle {{ stats[3] }}
        .vote.v4
          | 4
          .circle {{ stats[4] }}
        .vote.v5
          | 5
          .circle {{ stats[5] }}

  .votes-list
    .vote-detail(v-for="vote in voting.votes")
      router-link(
        v-if="vote.createdBy"
        v-bind:to="{ name: 'groups:members:profile', params: { groupId: group.id, userId: vote.createdBy.id } }"
      )
        img.avatar(
          data-testid="avatar"
          v-bind:src="vote.createdBy.hash|gravatarImage({size: 48})"
          v-bind:alt="vote.createdBy.name"
        )
      .anonymous(
        data-testid="anonymous"
        v-else
      )
      .score(
        v-bind:class="getVoteClasses(vote)"
      ) {{ vote.score }}
      .comment(v-if="vote.comment")
        dw-markdown(:text="vote.comment")
