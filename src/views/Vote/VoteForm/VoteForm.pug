form.vote-form(data-testid="form" v-on:submit.prevent.once="handleSubmit()" autocomplete="off")
  .error(data-testid="error" v-if="error" role="alert")
    | {{ $t(error) }}

  .fieldset
    .label-container
      label(for="hueMood") {{ $t("VOTE_FORM.INPUT_COMMENT.LABEL_HUE") }}
    .input-container
      input(id="hueMood", v-model="input.hueMood", :placeholder="$t('VOTE_FORM.INPUT_COMMENT.PLACEHOLDER_HUE')")
  .comment
    .fieldset
      .label-container
        label(data-testid="commentlabel" for="comment") {{ $t("VOTE_FORM.INPUT_COMMENT.LABEL_TEXT") }}
        button.action(v-if="showPreview" type="button" v-on:click="handleClickEditButton")
          | {{ $t("VOTE_FORM.INPUT_COMMENT.ACTION_EDIT") }}
        button.action(v-else type="button" v-on:click="handleClickPreviewButton")
          | {{ $t("VOTE_FORM.INPUT_COMMENT.ACTION_PREVIEW") }}
      .preview(v-if="showPreview")
        dw-markdown(v-bind:text="input.comment")
      .input-container(v-else)
        textarea(data-testid="comment" id="comment" v-model="input.comment" :placeholder="$t('VOTE_FORM.INPUT_COMMENT.PLACEHOLDER_DESCRIPTION')")
        a.description(href='https://spec.commonmark.org/0.29/' target='_blank') &#128712; {{ $t("VOTE_FORM.INPUT_COMMENT.DESCRIPTION") }}


