.group-members
  h2.title-view {{ $t("GROUP_MEMBER_LIST.ADD_NEW_MEMBER") }}
  .member-add-form
    form.form(data-testid="form" v-on:submit.prevent="handleAddUserToGroup" autocomplete="off")
      .fieldset
        .label-container
          label(for="member") {{ $t("GROUP_MEMBER_LIST.NEW_MEMBER_EMAIL") }}
        .input-container
          input(
            id="member"
            name="member"
            type="email"
            v-bind:placeholder="$t('GROUP_MEMBER_LIST.NEW_MEMBER_EMAIL_PLACEHOLDER')"
            v-model="input.email"
          )
      .action-buttons
        button.primary(type="submit" :disabled="disableAddButton") {{ $t("GROUP_MEMBER_LIST.ADD") }}
  .list-member
    ul
      li.member(v-for="member in memberList")
        h1 {{ member.name }}
        .avatar-holder
          Avatar.avatar(
            :hash="member.hash"
            :name="member ? member.name : $t('COMMON.USERS.ANONYMOUS_USER')"
          )

