.header
  .logo(data-testid="logo")
    include ../../../assets/img/logo.svg
  .actions(data-testid="actions" v-if="me")
    router-link.action(v-bind:to="{ name: 'groups:list' }") {{ $t("HEADER.ACTIONS.MY_GROUPS")}}
    div.user-menu(data-testid="user-menu")
      div.user
        span.name(data-testid="user-name") {{ me.name }}
        img.avatar(data-testid="user-avatar" v-bind:src="me.hash|gravatarImage" alt)
      div.options-wrapper(data-testid="user-actions")
        div.options-container
          router-link(v-bind:to="{ name: 'my-profile' }") {{ $t("HEADER.USER_ACTIONS.MY_PROFILE")}}
          a(data-testid="action-logout" v-on:click="handleClickLogout") {{ $t("HEADER.USER_ACTIONS.LOGOUT") }}
