dw-dialog(v-bind:name="name" v-on:close="handleClose")
  .confirm
    h2.title(data-testid="title" if="title") {{ title}}
    .message(data-testid="message" if="message") {{ message }}
    .actions
      button.reject(
        data-testid="reject-button"
        v-on:click="$emit('reject')"
        v-bind:disabled="isLoading"
      ) {{ rejectButtonText }}
      button.confirm(
        data-testid="acept-button"
        v-on:click="$emit('acept')"
        v-bind:disabled="isLoading"
      ) {{ aceptButtonText }}
