.group-member-list(v-if="group")
  .head
    h2 {{ $t("GROUP_MEMBER_LIST.TITLE") }}
    button.add-member(data-testid="action-add-member" v-if="group.isCurrentUserAdmin")
      | {{ $t("GROUP_MEMBER_LIST.ACTION_ADD_MEMBER") }}
  .table
    .row(tabindex="0", v-for="member in group.members", data-testid="row" role="link"
       v-on:click=""
       v-on:keyup.enter=""
    )
      .name(data-testid="name") {{ member.name }}
      .actions(v-if="group.isCurrentUserAdmin")
        button.delete(data-testid="action-delete-member")
          | {{ $t("GROUP_MEMBER_LIST.ROW.ACTION_DELETE_MEMBER") }}
    .row.empty(v-if="group.members.length === 0", data-testid="row-empty")
      | {{ $t("GROUP_MEMBER_LIST.EMPTY") }}
